<h1> <%= @office.name %> </h1>

<% @office.temp_jobs.each do |temp_job| %>
  <hr/>

  <%=temp_job.when%>
  <%=temp_job.notes%>
  <span> proposals: <%= temp_job.proposal? %>, invites: <%=temp_job.request? %>, applications: <%=temp_job.post?%></span>
  <h3> Proposals </h3>
  <%= form_for Proposal.new(temp_job: temp_job) do |f| %>
    <%= f.collection_select :professional_id, Professional.all, :id, :name %>
    <%= f.hidden_field :temp_job_id, value: temp_job.id %>
    <%= f.submit "create" %>
  <% end %>
  <ul>
    <% temp_job.proposals.each do |proposal| %>
      <li>
        <%=proposal.professional.name%>
      </li>
    <% end %> 
  </ul>
  <h3> Invites </h3>
  <%= form_for Invite.new(temp_job: temp_job) do |f| %>
    <%= f.collection_select :professional_id, Professional.all, :id, :name %>
    <%= f.hidden_field :temp_job_id, value: temp_job.id %>
    <%= f.submit "create" %>
  <% end %>
  <ul>
    <% temp_job.invites.each do |invite| %>
      <li>
        <%=invite.professional.name%>
      </li>
    <% end %> 
  </ul>
  <h3> Applications </h3>
  <%= form_for Application.new(temp_job: temp_job) do |f| %>
    <%= f.collection_select :professional_id, Professional.all, :id, :name %>
    <%= f.hidden_field :temp_job_id, value: temp_job.id %>
    <%= f.submit "create" %>
  <% end %>
  <ul>
    <% temp_job.applications.each do |application| %>
      <li>
        <%=application.professional.name%>
      </li>
    <% end %> 
  </ul>
  <hr/>
<% end %>
